<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            layout="@layout/toolbar"/>

        <Spinner
            android:id="@+id/spPersonaEdit"
            android:layout_width="match_parent"
            android:layout_height="71dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView29"
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="APELLIDO PATERNO:"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edtNomPla"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
              />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView36"
                android:layout_width="50dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="APELLIDO MATERNO::"

                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <EditText
                android:id="@+id/edtDesPla"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView37"
                android:layout_width="53dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:text="NOMBRE:"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edtNomPer"
                android:layout_width="wrap_content"
                android:layout_height="88dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="text"
               />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView39"
                android:layout_width="48dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:text="CONTRASEÃ‘A::"

                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edtContraPer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnEditarPer"
                android:layout_width="208dp"
                android:layout_height="wrap_content"
                android:text="EDITAR CLIENTE"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/btnEliminarPer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ELIMIAR CLIENTE"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity ="start">

        <include
            layout="@layout/nav_admin"/>



    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>