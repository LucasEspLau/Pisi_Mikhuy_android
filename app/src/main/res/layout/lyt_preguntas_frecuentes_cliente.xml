<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".controlador.ActPreguntasFrecuentesNull">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="124dp"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Pregunta 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/naranja"
                android:text="¿DÓNDE ESTAMOS UBICADOS?"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estamos ubicados en La Molina distrito de Lima La Molina,Av.La Fontana 1250, Lima 15024 "
                android:textAlignment="textStart"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/crema" />

            <!-- Pregunta 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/naranja"
                android:text="¿A QUIÉN DEBO CONTACTAR EN CASO NO PUEDA REGISTRARME EN EL APLICATIVO MÓVIL DE PISIMIKHUY? "
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="En caso de que encuentres dificultades para registrarse en el aplicativo móvil de PisiMikhuy, te recomendamos que te pongas en contacto con el servicio de atención al cliente. Número de teléfono: +51 976783049"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/crema" />

            <!-- Pregunta 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/naranja"
                android:text="¿CÓMO PUEDO REGISTRARME EN EL APLICATIVO MÓVIL DE PISIMIKHUY?"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Para registrarte en la aplicación móvil de PisiMikhuy, busca la opción de &quot;Registrarse&quot;. Completa el formulario de registro proporcionando la información requerida, como tu nombre, derección de correo electrónico,DNI y contraseña"
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/crema" />

            <!-- Pregunta 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:background="@color/naranja"
                android:text="¿CÓMO PUEDO OBTENER EL REGALO QUE BRINDA EL RESTAURANTE?"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Para obtener el regalo debes cumplir los siguientes pasos: -Primero deberás iniciar Sesión con tu cuenta creada en PisiMikhuy, luego de realizar 5 compras en nuestras tienda, podrás abrir el regalo que se encuentra en nuestra lista de opciones,  titulado: PREMIO, abrir el regalo, canjear tu premio y finalmente obtendrás un descuento al iniciar sesión en nuestros restaurantes."
                android:textColor="@color/black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/crema" />

            <!-- Pregunta 5 -->

            <!-- Preguntas adicionales -->

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity ="start">

        <include
            layout="@layout/nav_cliente"/>


    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>